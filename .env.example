# =============================================================================
# LOCAL AI ENVIRONMENT - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# COMMON VARIABLES
# -----------------------------------------------------------------------------
TZ=UTC
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# POSTGRES DATABASE (shared by open-webui, n8n, memorizer)
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Connection string for applications (optional, can be constructed)
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# VALKEY (Redis-compatible cache)
# -----------------------------------------------------------------------------
VALKEY_HOST=valkey
VALKEY_PORT=6379
# VALKEY_PASSWORD=  # Uncomment and set if authentication is enabled

# -----------------------------------------------------------------------------
# OPEN-WEBUI
# -----------------------------------------------------------------------------
# OLLAMA_BASE_URL=http://host.docker.internal:11434  # For local Ollama
# OPENWEBUI_ADMIN_PASSWORD=admin  # Initial admin password

# -----------------------------------------------------------------------------
# N8N
# -----------------------------------------------------------------------------
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password_here
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
# WEBHOOK_URL=http://localhost:5678/  # Update with your domain for production
N8N_ENCRYPTION_KEY=your_encryption_key_here_32_chars
# N8N_DIAGNOSTICS_ENABLED=false

# -----------------------------------------------------------------------------
# SEARXNG
# -----------------------------------------------------------------------------
# SEARXNG_SECRET_KEY=your_secret_key_here
# INSTANCE_NAME=local-ai-search
# BASE_URL=http://localhost:8080/

# -----------------------------------------------------------------------------
# DOCLING
# -----------------------------------------------------------------------------
# DOCLING_MODEL_CACHE_DIR=/modelcache
# HF_TOKEN=  # Optional: for gated models

# -----------------------------------------------------------------------------
# MEMORIZER
# -----------------------------------------------------------------------------
# MEMORIZER_POSTGRES_URL=postgresql://postgres:your_password@postgres:5432/postgres
# MEMORIZER_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# NVIDIA RUNTIME (optional)
# -----------------------------------------------------------------------------
# NVIDIA_VISIBLE_DEVICES=all

SPEACHES_BASE_URL=http://speaches:8000